{
  "latex-workshop.latex.autoClean.run": "never",
  "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
  "latex-workshop.latex.recipe.default": "first",
  "latex-workshop.latex.recipes": [
    {
      "name": "Build",
      "tools": [
        "latexmk",
        "move-pdf"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=0",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },
    {
      "name": "move-pdf",
      "command": "sh",
      "args": [
        "-c",
        "PDF_DIR=%WORKSPACE_FOLDER%/pdf",
        "&& install -D %OUTDIR%/%DOCFILE%/%DOCFILE%.pdf ${PDF_DIR}/%DOCFILE%.pdf",
        "&& chmod --reference=%OUTDIR%/%DOCFILE%.pdf ${PDF_DIR}/%DOCFILE%.pdf",
        "&& rm %OUTDIR%/%DOCFILE%.pdf"
      ]
    }
  ]
}